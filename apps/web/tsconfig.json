{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "~/utils/*": ["./src/utils/*"],
            "~/hooks/*": ["./src/hooks/*"],
            "~/components/*": ["./src/components/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
