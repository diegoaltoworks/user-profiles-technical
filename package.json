{
    "name": "user-profiles-technical",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "dotenvx run -- turbo run dev",
        "build": "dotenvx run -- turbo run build",
        "test": "dotenvx run -- turbo run test",
        "type-check": "turbo type-check",
        "format": "prettier --write \"**/*.{ts,tsx,md,js,json}\"",
        "lint": "turbo run lint",
        "lint-staged": "lint-staged",
        "reset": "rm -rf node_modules package-lock.json && npm install",
        "clean": "turbo run clean",
        "gcloud:setup": "gcloud config configurations activate diagoa",
        "gcloud:build:api": "gcloud builds submit --tag gcr.io/dworks-diegoa/user-profiles-technical-api",
        "gcloud:deploy:api": "gcloud run deploy user-profiles-technical-api --image gcr.io/dworks-diegoa/user-profiles-technical-api --platform managed --region europe-west4 --allow-unauthenticated",
        "gcloud:build:web": "gcloud builds submit --tag gcr.io/dworks-diegoa/user-profiles-technical-web",
        "gcloud:deploy:web": "gcloud run deploy user-profiles-technical-web --image gcr.io/dworks-diegoa/user-profiles-technical-web --platform managed --region europe-west4 --allow-unauthenticated",
        "prepare": "husky"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^19.5.0",
        "@dotenvx/dotenvx": "^1.14.2",
        "commitlint": "^19.5.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "prettier": "^3.2.5",
        "turbo": "^2.1.2"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=7.0.0"
    },
    "packageManager": "npm@10.8.2",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "@tanstack/react-query": "^4.36.1",
        "@trpc/client": "^10.45.2",
        "@trpc/next": "^10.45.2",
        "@trpc/react-query": "^10.45.2",
        "@trpc/server": "^10.45.2",
        "zod": "^3.23.8"
    }
}
